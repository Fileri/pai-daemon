{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "type": "stat",
      "title": "Total Events (24h)",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"pai-daemon\"}[24h]))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["sum"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "User Prompts (24h)",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "datasource": { "type": "loki", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"pai-daemon\", hook_event_type=\"UserPromptSubmit\"}[24h]))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["sum"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Tool Uses (24h)",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "datasource": { "type": "loki", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum(count_over_time({app=\"pai-daemon\", hook_event_type=~\"PreToolUse|PostToolUse\"}[24h]))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["sum"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "orange", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Active Sessions",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "datasource": { "type": "loki", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "count(count_over_time({app=\"pai-daemon\"}[1h]) by (session_id))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "purple", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Events Over Time",
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 4 },
      "datasource": { "type": "loki", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum by (hook_event_type) (count_over_time({app=\"pai-daemon\"}[1m]))",
          "legendFormat": "{{hook_event_type}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "bars",
            "fillOpacity": 80,
            "gradientMode": "none",
            "hideFrom": { "legend": false, "tooltip": false, "viz": false },
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "pointSize": 5,
            "scaleDistribution": { "type": "linear" },
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "group": "A", "mode": "normal" },
            "thresholdsStyle": { "mode": "off" }
          },
          "unit": "short"
        },
        "overrides": []
      }
    },
    {
      "type": "piechart",
      "title": "Event Types Distribution",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 4 },
      "datasource": { "type": "loki", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum by (hook_event_type) (count_over_time({app=\"pai-daemon\"}[$__range]))",
          "legendFormat": "{{hook_event_type}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "showLegend": true,
          "values": ["value", "percent"]
        },
        "pieType": "pie",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      }
    },
    {
      "type": "barchart",
      "title": "Tool Usage",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "datasource": { "type": "loki", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum by (tool_name) (count_over_time({app=\"pai-daemon\", hook_event_type=\"PreToolUse\"} | json | tool_name != \"\" [$__range]))",
          "legendFormat": "{{tool_name}}",
          "refId": "A"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "showValue": "always",
        "groupWidth": 0.7,
        "barWidth": 0.9,
        "xTickLabelRotation": 0,
        "legend": {
          "displayMode": "list",
          "placement": "right",
          "showLegend": true
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      }
    },
    {
      "type": "barchart",
      "title": "Source Apps (Agents)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "datasource": { "type": "loki", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum by (source_app) (count_over_time({app=\"pai-daemon\"}[$__range]))",
          "legendFormat": "{{source_app}}",
          "refId": "A"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "showValue": "always",
        "groupWidth": 0.7,
        "barWidth": 0.9,
        "xTickLabelRotation": 0,
        "legend": {
          "displayMode": "list",
          "placement": "right",
          "showLegend": true
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      }
    },
    {
      "type": "logs",
      "title": "Live Event Stream",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 20 },
      "datasource": { "type": "loki", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "{app=\"pai-daemon\"}",
          "refId": "A"
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": true,
        "showCommonLabels": false,
        "showLabels": true,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 39,
  "templating": {
    "list": [
      {
        "current": {
          "selected": false,
          "text": "Loki",
          "value": "loki"
        },
        "hide": 0,
        "includeAll": false,
        "label": "Data Source",
        "multi": false,
        "name": "datasource",
        "options": [],
        "query": "loki",
        "queryValue": "",
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false,
        "type": "datasource"
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "browser",
  "title": "PAI Daemon - Claude Code Sessions",
  "uid": "pai-daemon-sessions",
  "version": 1,
  "weekStart": ""
}
